<div class="product-big-title-area">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="product-bit-title text-center">
          <h2><%= @phone.title %></h2>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="single-product-area">
  <div class="zigzag-bottom"></div>
  <div class="container phone-container">
    <div class="row">
      <div class="col-md-11">
        <div class="product-content-right">
          <div class="row">
            <div class="col-sm-6">
              <div class="col-sm-12">
                <div class="simpleLens-gallery-container" id="zoom_gallery">
                  <div class="simpleLens-container">
                    <div class="simpleLens-big-image-container">
                      <a class="simpleLens-lens-image" data-lens-image="<%= @phone.phone_images.first.image.url(:original) %>">
                        <img src="<%= @phone.phone_images.first.image.url(:medium) %>" class="simpleLens-big-image">
                      </a>
                    </div>
                  </div>
                  <div class="simpleLens-thumbnails-container">
                    <% @phone.phone_images.each do |img| %>
                      <a href="javascript:void(0)" class="simpleLens-thumbnail-wrapper" data-lens-image="<%= img.image.url(:original) %>" data-big-image="<%= img.image.url(:medium) %>">
                        <img src="<%= img.image.url(:thumb) %>">
                      </a>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="product-inner">
                <h2 class="product-name"><%= @phone%></h2>
                <p>
                  <%= @phone.short_desc  %>
                </p>
                <div class="product-inner-price">
                  <% if @phone.new_price.blank? %>
                    <p style="font-size: 17px;font-weight: 600;">
                      Consulte el precio por el equipo libre.
                    </p>
                  <% else %>
                    <span class="price-acc">Precio libre:</span>
                    <ins>$ <%= @phone.new_price %> <small style="font-size: 53%;color:#9e9e9e"> (IVA inc.)</small></ins>
                    <% unless @phone.old_price.blank? %>
                      antes
                      <del>$<%= @phone.old_price%> <small style="font-size: 53%;color:#9e9e9e"> (IVA inc.)</small></del>
                    <% end -%>
                    <br>
                  <% end -%>
                  <span class="price-acc">Stock:</span>
                  <ins style="color:#89c403"><i class="fa fa-check"></i></ins>
                  <% if @phone.new_price.blank? %>
                    <% name_fb = @phone.title %>
                  <% else %>
                    <% name_fb = "#{@phone.title} a tan solo #{@phone.new_price}" %>
                  <% end -%>
                  <%= link_to("javascript:void(0)", class: "fb-share-btn",
                                                    :"data-name" => name_fb,
                                                    :"data-caption" => "",
                                                    :"data-link" => request.original_url,
                                                    :"data-picture" => asset_url(@phone.phone_images.first.image),
                                                    :"data-description" => "#{@phone.short_desc}" ) do %>
                    <%= image_tag 'publicarlo-en-fb.png', class: "btn-share", width: 100 %>
                  <% end -%>
                  <%= render partial: "/layouts/facebook_share" %>
                </div>
                <div class="comun-data">
                  <i class="fa fa-phone-square fa-4x"></i>
                  <span>47327066</span><br>
                  <p>comunicate y te lo enviamos</p>
                </div>
                <div class="payment-type">
                  <span>aceptamos todas las tarjetas:</span>
                  <%= image_tag "tarjetas.png", :width => "450" %>
                </div>
              </div>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="">
              <div id="phone-tabs" class="tabs">
                <nav>
                  <ul>
                    <li><a href="#section-1" class="icon icon-file-text"><span>Descripci√≥n</span></a></li>
                    <li><a href="#section-2" class="icon icon-list2"><span>Especificaciones</span></a></li>
                    <li><a href="#section-3" class="icon icon-price-tags"><span>Planes</span></a></li>
                    <li><a href="#section-4" class="icon icon-attachment"><span>Accesorios Compatibles</span></a></li>
                  </ul>
                </nav>
                <div class="content">
                  <section id="section-1">
                    <div class="cel-description">
                      <%= @phone.long_desc.html_safe %>
                    </div>
                  </section>
                  <section id="section-2">
                  <%= render partial: "spec" %>
                  </section>
                  <section id="section-3">
                    <% @phone.phone_plans.each do |pp| %>
                      <div class="panelPlan">
                        <div class="panel-heading panelplan-head">
                          <span class="tit"> Con <%= pp.plan.title %></span>
                          <span class="pull-right price"><%= pp.price %> </span>
                        </div>
                      </div>
                    <% end -%>
                  </section>
                  <section id="section-4">
                    <% @phone.accessories.each do |a| %>
                      <div class="boxEquipo col-md-12 lista">
                        <div class="boxImg ">
                          <%= image_tag a.accessory_images.first.image(:thumb)%>
                        </div>
                        <div class="boxCont">
                          <h4><%= a.title %></h4>
                          <div class="desc">
                            <p><%= a.short_desc %></p>
                          </div>
                        </div>

                        <div class="boxPrecio">
                          <div class="desde">A solo</div>
                          <div class="price-acce">
                            <strong>
                              <small>$</small><%= a.new_price %>
                            </strong>
                          </div>
                          <%= link_to "/accesorios/#{a.id}" do %>
                            <div class="btn-more-details">
                              <span class="icon-carro"></span>
                              Ver detalles
                            </div>
                          <% end -%>
                        </div>
                      </div>
                    <% end -%>
                  </section>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
