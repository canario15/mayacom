<div class="product-big-title-area">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="product-bit-title text-center">
          <h2>Contratos</h2>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="single-product-area">
  <div class="zigzag-bottom"></div>
  <div class="container catalog-cel-cont">
    <div class="row row-tit">
      <div class="col-lg-8 col-md-8 col-sm-7 col-xs-7 colTit hidden-xs visible-xss">
        <h1>Contratos Móviles</h1>
      </div>
    </div>
    <div clas="row rowContracts">
      <% @contracts.each do |c| %>
        <div class="contr-card scroll ">
          <div class="contr-card-wrapper">
            <div class="div-contr-img">
              <%= image_tag c.logo(:index) %>
            </div>
            <div class="div-contr-tit">
              <h3><%= c.title %></h3>
            </div>
            <div class="div-contr-desc">
              <p><%= c.short_desc %></p>
            </div>
            <div class="div-contr-price">
              <% if c.lower_plan == "0" %>
                <p>Sin costo mensual</p>
              <% else %>
                <p>
                  Desde
                  <strong>
                    <small>$</small>
                    <%= c.lower_plan %>
                  </strong>
                  <span> mensuales </span>
                </p>
              <% end -%>
            </div>
            <div class="contr-card-detail">
              <div class="div-plan-tit">
                <h3><%= c.title %></h3>
                <h4>Elegí tu plan</h4>
              </div>
              <div class=" plan-accordion div-plan-acord">
                <% c.plans.each do |p| %>
                  <h1><%= p.title %></h1>
                  <div class="listdata" data-status="0">
                    <ul>
                      <li>
                        <i class="fa fa-check"></i>
                        <%= p.item_1 %>
                      </li>
                      <li>
                        <i class="fa fa-check"></i>
                        <%= p.item_2 %>
                      </li>
                      <li>
                        <i class="fa fa-check"></i>
                        <%= p.item_3 %>
                      </li>
                    </ul>
                    <div class="cost2">
                      <div class="btn-mo-det">
                        <%= link_to "/contratos/#{c.id}/plan/#{p.id}" do %>
                          Más detalles
                        <% end -%>
                      </div>
                      <div class="info">
                        <% if p.price == "0" %>
                          <p style="margin-top: 10px">
                            Sin costo mensual
                          </p>
                        <% else %>
                          <p style="float:left">
                            A solo
                          </p>
                          <p>
                            <strong><small>$</small>  <%= p.price %> </strong>
                            <span style="font-size: 12px">mensuales</span>
                          </p>
                        <% end %>
                      </div>
                      <div class="clear"></div>
                    </div>
                  </div>
                <% end -%>
              </div>
            </div>
          </div>
        </div>
      <% end -%>
    </div>
  </div>
</div>
