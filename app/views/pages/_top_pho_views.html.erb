<% data.each do |phone| %>
  <div class="single-wid-product">
    <%= link_to "/celulares/#{phone.id}"  do  %>
      <%= image_tag phone.phone_images.first.image(:thumb), :class => "product-thumb" %>
    <% end -%>
    <h2>
      <%= link_to "#{phone.brand} #{phone.model} ", "/celulares/#{phone.id}" %>
    </h2>
    <div class="product-wid-rating">
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
    </div>
    <% unless phone.new_price.blank? %>
      <div class="product-wid-price">
        <ins>
          $<%= phone.new_price %>
          <small style="font-size: 62%;color:#9e9e9e"> (IVA inc.)</small>
        </ins>
        <% unless phone.old_price.blank? %>
          <del>
            <%= "$#{phone.old_price}"  %>
            <small style="font-size: 62%;color:#9e9e9e"> (IVA inc.)</small>
          </del>
        <% end -%>
      </div>
    <% end -%>
  </div>
<% end -%>
